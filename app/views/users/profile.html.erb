<div class="row">
  <div class="col-md-12 col-lg-12">
    <p>Your win/loss ratio: <%= number_with_precision(@current_user.wins.count.to_f / @current_user.losses.count, precision: 2) %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">Top Rivals</div>
      <% if current_user.rivals.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Player</th>
              <th>You Lost</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.rivals.each do |rival| %>
              <tr>
                <td><%= image_tag rival.gravatar_url %> <%= rival.email %></td>
                <td><%= rival.score %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>You are currently undefeated!</p>
      <% end %>
    </div>
  </div>
  <div class="col-md-6 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">Top Players</div>
      <% if current_user.group.top_users.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Player</th>
              <th>Wins</th>
              <th>Losses</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.group.top_users.each do |player| %>
              <tr>
                <td><%= image_tag player.gravatar_url %> <%= player.email %></td>
                <td><%= player.total_wins %></td>
                <td><%= player.total_games - player.total_wins %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>You are currently undefeated!</p>
      <% end %>
    </div>
  </div>
</div>
